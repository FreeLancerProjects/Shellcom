<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/gray1"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/logo"
            android:layout_gravity="end"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/customs_clearance"
            android:textColor="@color/yellow1"
            android:layout_gravity="center"

            />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_left_arrow"
            />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    >
<LinearLayout
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    >
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/select_a_picture_to_upload"
      android:textColor="@color/black"
      android:gravity="center"
      android:textSize="15sp"
      />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/image_delete"
        android:textColor="@color/gray2"
        android:gravity="center"
        android:textSize="15sp"
        />

</LinearLayout>
 <LinearLayout
     android:id="@+id/lll"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     app:layout_constraintTop_toBottomOf="@+id/ll"
     android:weightSum="1"
     android:layout_marginTop="15dp"
     >
 <LinearLayout
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_weight=".45"
     >
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/model_four"
      android:textColor="@color/black"
      android:textSize="15sp"
      />
     <FrameLayout
         android:id="@+id/fl1"
         android:layout_width="match_parent"
         android:layout_height="150dp"
         android:background="@drawable/linear_shape">

         <com.makeramen.roundedimageview.RoundedImageView
             android:id="@+id/image1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             app:riv_border_width="1dp"
             app:riv_corner_radius="10dp" />

         <ImageView
             android:id="@+id/icon1"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_gravity="center"
             android:padding="30dp"
             android:src="@drawable/ic_upload"

             />
     </FrameLayout>

 </LinearLayout>
     <View
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight=".1"
         />
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_weight=".45"
         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/business_register"
             android:textColor="@color/black"
             android:textSize="15sp"
             />
         <FrameLayout
             android:id="@+id/fl2"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:background="@drawable/linear_shape">

             <com.makeramen.roundedimageview.RoundedImageView
                 android:id="@+id/image2"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 app:riv_border_width="1dp"
                 app:riv_corner_radius="10dp"
                 android:clickable="false"
                 android:longClickable="false"
                 />

             <ImageView
                 android:id="@+id/icon2"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:layout_gravity="center"
                 android:padding="30dp"
                 android:src="@drawable/ic_upload"
                 android:clickable="false"
                 android:longClickable="false"

                 />
         </FrameLayout>

     </LinearLayout>

 </LinearLayout>
    <LinearLayout
        android:id="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/lll"
        android:weightSum="1"
        android:layout_marginTop="15dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".45"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tax_card"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <FrameLayout
                android:id="@+id/fl3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/linear_shape">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:riv_border_width="1dp"
                    app:riv_corner_radius="10dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:padding="30dp"
                    android:src="@drawable/ic_upload"
                    android:clickable="false"
                    android:longClickable="false"

                    />
            </FrameLayout>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".45"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/import_card"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <FrameLayout
                android:id="@+id/fl4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/linear_shape">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:riv_border_width="1dp"
                    app:riv_corner_radius="10dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:padding="30dp"
                    android:src="@drawable/ic_upload"
                    android:clickable="false"
                    android:longClickable="false"

                    />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/llll"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/customs_card"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <FrameLayout
            android:id="@+id/fl5"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/linear_shape">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_border_width="1dp"
                app:riv_corner_radius="10dp"
                android:clickable="false"
                android:longClickable="false"
                />

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:padding="30dp"
                android:src="@drawable/ic_upload"
                android:clickable="false"
                android:longClickable="false"
                />
        </FrameLayout>

    </LinearLayout>
<EditText
    android:id="@+id/edt_details"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:layout_constraintTop_toBottomOf="@id/ll4"
    android:hint="@string/the_type_of_shipment_required_from_abroad"
    android:gravity="top"
    android:padding="10dp"
    android:textColor="@color/black"
    android:textSize="14sp"
    android:layout_marginTop="10dp"
    android:background="@drawable/linear_shape"
    android:inputType="textMultiLine"
    />
    <Button
        android:id="@+id/btn_send"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_shape"
        android:text="@string/send"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>